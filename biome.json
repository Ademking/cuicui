{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "assists": {
    "actions": {
      "source": {
        "useSortedKeys": "on",
        "sortJsxProps": "on"
      }
    },
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "all": true
      },
      "complexity": {
        "all": true
      },
      "correctness": {
        "all": true,
        "useImportExtensions": "off",
        "noNodejsModules": "off"
      },
      "performance": {
        "all": true
      },
      "security": {
        "all": true
      },
      "style": {
        "all": true,
        "noDefaultExport": "off",
        "noNamespaceImport": "info",
        "useNamingConvention": "info"
      },
      "suspicious": {
        "all": true,
        "noReactSpecificProps": "off",
        "noConsole": "info"
      },
      "nursery": {
        "useSortedClasses": "off"
      }
    }
  }
}
